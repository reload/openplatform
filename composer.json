{
    "name": "danskernesdigitalebibliotek/openplatform",
    "description": "Client for the Open Platform service for the danish libraries",
    "type": "library",
    "license": "AGPL",
    "require": {
        "symfony/http-client": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "DDB\\OpenPlatform\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DDB\\OpenPlatform\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "mnapoli/silly": "^1.7",
        "symfony/yaml": "^4.3",
        "phpstan/phpstan": "^0.11.16",
        "jangregor/phpstan-prophecy": "^0.4.2",
        "phpstan/extension-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.5"
    }
}
