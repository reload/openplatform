{
    "name": "danskernesdigitalebibliotek/openplatform-client",
    "description": "Client for the Open Platform service for the danish libraries",
    "type": "library",
    "license": "AGPL",
    "require": {
        "symfony/http-client": "^5.4.0"
    },
    "autoload": {
        "psr-4": {
            "DDB\\OpenPlatform\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DDB\\OpenPlatform\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mnapoli/silly": "^1.7",
        "symfony/yaml": "^4.3",
        "phpstan/phpstan": "^1.0",
        "jangregor/phpstan-prophecy": "^1.0",
        "phpstan/extension-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
